# Пример конфигурации Nginx для внешнего сервера (с белым IP)
# Проксирование на внутренний сервер с Django через локальную сеть
# 
# Использование:
# 1. Скопируйте этот файл в /etc/nginx/sites-available/santa-game-admin на ВНЕШНЕМ сервере
# 2. Создайте символическую ссылку: sudo ln -s /etc/nginx/sites-available/santa-game-admin /etc/nginx/sites-enabled/
# 3. Отредактируйте файл, заменив:
#    - example.com на ваш домен
#    - 192.168.1.100 на внутренний IP адрес сервера с Django
#    - 8000 на порт, на котором работает Django Admin на внутреннем сервере
#    - пути к SSL сертификатам
# 4. Проверьте конфигурацию: sudo nginx -t
# 5. Перезагрузите nginx: sudo systemctl reload nginx
#
# Автор: Michael BAG
# Версия: 1.1

# Редирект с HTTP на HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name example.com www.example.com;

    # Для Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Редирект на HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS сервер
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name example.com www.example.com;

    # SSL сертификаты (Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/example.com/privkey.pem;

    # Рекомендуемые настройки SSL
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Безопасность заголовков
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Логирование
    access_log /var/log/nginx/santa-game-admin-access.log;
    error_log /var/log/nginx/santa-game-admin-error.log;

    # Максимальный размер загружаемых файлов
    client_max_body_size 10M;

    # ВАЖНО: Блоки для статических и медиа файлов должны быть ПЕРЕД общим location /
    # Nginx проверяет location в порядке их появления

    # Статические файлы Django
    # ВАРИАНТ 1: Если статические файлы доступны на внешнем сервере (например, через NFS или rsync)
    # Раскомментируйте этот блок и закомментируйте ВАРИАНТ 2:
    # location /static/ {
    #     alias /path/to/staticfiles/on/external/server/;
    #     expires 30d;
    #     add_header Cache-Control "public, immutable";
    #     access_log off;
    #     try_files $uri =404;
    # }

    # ВАРИАНТ 2: Проксирование статических файлов на внутренний сервер
    # Используйте этот вариант, если статические файлы находятся только на внутреннем сервере
    location /static/ {
        # Проксирование на внутренний сервер с Django
        # Замените 192.168.1.100 на внутренний IP адрес сервера с Django
        proxy_pass http://192.168.1.100:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # Кеширование статических файлов на внешнем сервере
        proxy_cache_valid 200 30d;
        proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
        proxy_cache_background_update on;
        
        expires 30d;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Медиа файлы Django (если используются)
    location /media/ {
        # Проксирование на внутренний сервер с Django
        # Замените 192.168.1.100 на внутренний IP адрес сервера с Django
        proxy_pass http://192.168.1.100:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        expires 30d;
        add_header Cache-Control "public";
        access_log off;
    }

    # Проксирование на Django Admin для всех остальных запросов
    # Замените 192.168.1.100 на внутренний IP адрес сервера с Django
    # Замените 8000 на порт, на котором работает Django Admin на внутреннем сервере
    location / {
        proxy_pass http://192.168.1.100:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Буферизация
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
    }

    # Запрет доступа к скрытым файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

